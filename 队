#害其实和栈是nm同一个物种，但是为了熟练和练习，gem还是再写一次了呗
class Queue:
    def __init__(self):
        self.items = []
        
    def is_empty(self):
        return len(self.items) == 0    #上层思维——在函数中，能用专门表达就用专门表达
    
    def enqueue(self,item):
        self.items.append(item)#之所以不加return我想是因为不能多次运算
        
    def dequeue(self):
        if self.is_empty:
            return None
        return self.items.pop(0)
    
    def peek(self):
        if self.is_empty:
            return None
        return self.items[0]
    
    def size(self):
        return len(self.items)
    
queue = Queue()#一定要分清函数位置
queue.enqueue(1)
queue.enqueue(2)
queue.enqueue(1)
print(queue.dequeue())
print(queue.peek())#好吧，注释符也会影响，流汗黄豆
